<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Fetch a song!</title>
    <link rel="stylesheet" href="css/style.css">
</head>
<body>
    <h1>Songs</h1>
    <ul class = "songList">
        <% if (typeof arr !== 'undefined' && arr.length !== 0){  %>
            <% arr.forEach( song => { %>
                <li class = "songItem">
                    <span><%= song %></span>
                </li>
            <% }) %>  
        <% } %>
    </ul>

    <form action="/fetch" method='POST'>
        <input type="text" placeholder="Enter Todo Item" name='songTitle'>
        <input type="submit">
    </form>


    <% if (typeof videoIdArray !== 'undefined' && videoIdArray.length !== 0){ %>
        <% videoIdArray.forEach(videoId => { %>
            <iframe id="ytplayer" type="text/html" width="640" height="360"
            src=<%= `https://www.youtube.com/embed/${videoId}?autoplay=0&origin=http://example.com` %>
            frameborder="0"></iframe>
        <% }) %>
        
    <% } %>

    
    
    
    <script src="js/main.js"></script>
</body>
</html>